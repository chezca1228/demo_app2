#!/usr/bin/env ruby
ENV['GEM_HOME']=ENV['GEM_HOME'] || '/home/ralbaredo/.rvm/gems/ruby-1.9.2-p290'
ENV['GEM_PATH']=ENV['GEM_PATH'] || '/home/ralbaredo/.rvm/gems/ruby-1.9.2-p290:/home/ralbaredo/.rvm/gems/ruby-1.9.2-p290@global'
ENV['PATH']='/home/ralbaredo/.rvm/gems/ruby-1.9.2-p290/bin:/home/ralbaredo/.rvm/gems/ruby-1.9.2-p290@global/bin:/home/ralbaredo/.rvm/rubies/ruby-1.9.2-p290/bin:' + ENV['PATH']

require 'test/unit'
Test::Unit.setup_argv {|files|
  if files.empty?
    puts "Usage: testrb [options] tests..."
    exit 1
  end
  if files.size == 1
    $0 = File.basename(files[0])
  else
    $0 = files.to_s
  end
  files
}
